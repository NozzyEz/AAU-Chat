<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/generic" />

    <TextView
        android:id="@+id/message_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message_profile_image"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:text="Display Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/message_profile_image"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/message_text_background"
        android:padding="5dp"
        android:text="sample text"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/message_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/message_display_name"
        android:text="00:00" />


</RelativeLayout>